    body
        include ./header.pug
        div(class="container")
            h1 Add A Wedding Event
            form(action="/", method="POST")
                div(class="form-group")
                    label(for="name") Event Name: 
                    input(name="name" class="form-control" placeholder="ex: Engagement Party")
                div(class="form-group")
                    label(for="type") Event Type:
                    br
                    label(class="radio-inline")
                    input(type="radio" value="persian" name="type") 
                    |  Persian
                    label(class="radio-inline")
                    input(type="radio" value="portugese" name="type") 
                    |  Portugese
                    label(class="radio-inline")
                    input(type="radio" value="traditional" name="type") 
                    |  Traditional
                div(class="form-group")
                    label(for="days") Days Away: 
                    input(name="days" type="number" class="form-control" placeholder="ex: 2")
                div(class="form-group")
                    label(for="date") Date: 
                    input(name="date" type="date" class="form-control" placeholder="ex: March 21, 2018")
                button(type="submit" class="submit") Submit
        script(src='/js/myscript.js')
        include ./footer.pug